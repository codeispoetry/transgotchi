{
	"name": "wapuugotchi",
	"version": "0.1.1",
	"description": "",
	"author": "The WordPress Contributors",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build src/customizer.js src/scavenger-hunt.js src/quest-log.js src/onboarding.js src/index.js",
		"watch": "wp-scripts build src/customizer.js src/scavenger-hunt.js src/quest-log.js src/onboarding.js src/index.js --watch",
		"format": "wp-scripts format",
		"lint": "concurrently \"npm run lint:lockfile\" \"npm run lint:tsconfig\" \"npm run lint:js\" \"npm run lint:pkg-json\" \"npm run lint:css\"",
		"lint:css": "wp-scripts lint-style \"src/**/*.scss\"",
		"lint:css:fix": "npm run lint:css -- --fix",
		"lint:js": "wp-scripts lint-js",
		"lint:js:fix": "npm run lint:js -- --fix",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:php": "wp-env run composer run-script lint",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start src/customizer.js src/scavenger-hunt.js src/quest-log.js src/index.js",
		"env": "WP_ENV_HOME=wp-env-home wp-env",
		"test": "npx playwright test --config playwright.config.js tests/addSource.test.js"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.0",
		"@wordpress/env": "^8.12.0",
		"@wordpress/scripts": "^26.17.0"
	},
	"dependencies": {
		"@wordpress/api-fetch": "^6.43.0",
		"@wordpress/components": "^25.12.0",
		"@wordpress/dom-ready": "^3.46.0",
		"@wordpress/element": "^5.23.0",
		"@wordpress/i18n": "^4.46.0",
		"html-react-parser": "^5.0.6",
		"react-svg": "^16.1.31"
	},
	"files": [
		"build",
		"inc",
		"languages",
		"wapuugotchi.php",
		"config",
		"LICENSE",
		"src",
		"composer.json",
		"package.json"
	]
}
